{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "target": "es2019",
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "lib": [
      "es2019",
      "dom"
    ],
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "alwaysStrict": true
  },
  "include": [
    "apps/api/src/**/*"
  ],
  "exclude": ["node_modules"]
}