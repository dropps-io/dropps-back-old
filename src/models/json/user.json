{
  "$id": "user.json",
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "required": [
    "address",
    "selectedProfile"
  ],
  "additionalProperties": false,
  "properties": {
    "address": {
      "type": "string",
      "pattern": "^0x[a-fA-F0-9]{40}$",
      "description": "Address of the user"
    },
    "selectedProfile": {
      "type": "string",
      "pattern": "^0x[a-fA-F0-9]{40}$",
      "description": "Universal profile selected by the user"
    }
  }
}
