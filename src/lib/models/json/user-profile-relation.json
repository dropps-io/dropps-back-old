{
  "$id": "user-profile-relation.json",
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "required": [
    "profileAddress",
    "userAddress"
  ],
  "additionalProperties": false,
  "properties": {
    "profileAddress": {
      "type": "string",
      "pattern": "^0x[a-fA-F0-9]{40}$",
      "description": "Address of the Universal Profile"
    },
    "userAddress": {
      "type": "string",
      "pattern": "^0x[a-fA-F0-9]{40}$",
      "description": "Address of the user using this profile"
    }
  }
}
